<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Tic Tac Toe</title>
</head>
<body class="bg-gray-100 flex flex-col items-center justify-center min-h-screen">
    <h1 class="text-4xl font-bold mb-4">Tic Tac Toe</h1>
    <div class="grid grid-cols-3 gap-4">
        {{ range $i, $row := .Board }}
            {{ range $j, $cell := $row }}
                <div class="h-24 w-24 flex items-center justify-center border-2 border-gray-300 bg-white text-3xl cursor-pointer" onclick="sendMove({{ $i }}, {{ $j }})">
                    {{ if $cell }}{{ $cell }}{{ end }}
                </div>
            {{ end }}
        {{ end }}
    </div>
    <p class="mt-4 text-lg">{{ .Message }}</p>

    <script>
        function sendMove(row, col) {
            // Send the move to the opponent through the data channel
            const move = { row: row, col: col, player: "{{ .CurrentPlayer }}" };
            dataChannel.send(JSON.stringify(move));
        }
    </script>
</body>
</html>
